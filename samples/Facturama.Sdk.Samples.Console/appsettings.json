{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Facturama": "Debug"
    }
  },
  "Facturama": {
    "Username": "user",
    "Password": "password",
    "Environment": "Sandbox",
    "Timeout": "00:00:15",
    "MaxRetries": 3,
    "EnableLogging": true,
    "EnableCompression": true,
    "HttpClient": {
      "Timeout": "00:00:45",
      "UserAgent": "FacturamaSDK/1.0.0",
      "EnableCompression": true,
      "MaxConnectionsPerServer": 10,
      "AllowAutoRedirect": true,
      "MaxAutomaticRedirections": 3
    },
    "RetryPolicy": {
      "MaxRetries": 3,
      "InitialDelay": "00:00:01",
      "MaxDelay": "00:00:30",
      "BackoffType": "Exponential",
      "BackoffMultiplier": 2.0,
      "RetryOnStatusCodes": [ 408, 429, 500, 502, 503, 504 ],
      "EnableJitter": true
    },
    "CircuitBreaker": {
      "Enabled": true,
      "FailuresBeforeBreaking": 5,
      "DurationOfBreak": "00:00:30"
    }
  }
}